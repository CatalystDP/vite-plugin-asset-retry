{
  "name": "@catalystdp/vite-plugin-assets-retry",
  "version": "0.1.0",
  "exports": {
    ".": {
      "import": "./dist/plugin/index.mjs",
      "require": "./dist/plugin/index.cjs"
    },
    "./plugin": {
      "import": "./dist/plugin/index.mjs",
      "require": "./dist/plugin/index.cjs"
    },
    "./runtime": {
      "default": "./dist/runtime/retry-runtime.umd.js"
    }
  },
  "types": "./dist/plugin/index.d.ts",
  "scripts": {
    "bootstrap": "pnpm install --frozen-lockfile",
    "dev": "vite --host",
    "build:demo": "npm run dev:runtime && vite build",
    "build:plugin": "vite build --config vite.config.plugin.ts",
    "dev:runtime": "npm run build:runtime -- --minify false",
    "build:runtime": "vite build --config vite.config.runtime.ts",
    "build": "rimraf build/**/* && tsc && vite build --config vite.config.lib.ts && dts-bundle-generator --config ./dts-bundle-generator.config.ts && copyfiles ./package.json build",
    "build:all": "rimraf ./dist && npm run build:runtime && npm run build:plugin",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles",
    "prepare": "husky && echo 'npx lint-staged' > .husky/pre-commit && git add .husky/pre-commit",
    "uninstall-husky": "npm uninstall husky --no-save && git config --unset core.hooksPath && npx rimraf .husky",
    "test:e2e": "npm run build:demo && playwright test",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@microsoft/api-extractor": "^7.54.0",
    "@playwright/test": "^1.55.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "assets-retry": "^0.3.5",
    "commitizen": "^4.3.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "terser": "^5.44.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "unplugin-dts": "1.0.0-beta.0",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "packageManager": "pnpm@10.17.1+sha256.a1e0133f6801c13039ae41309e5e5a7d1058a3a1e1edd020a4944a83c5368d04",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
